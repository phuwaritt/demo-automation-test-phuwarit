pipeline {
    agent { label 'bpy-agent'}
    environment {
        BASE_URL = 'http://192.8.8.133:8080/'
        PROJECT_ID = 'da0da8be-dc08-4d88-8ed4-97057bfd87f9'
        REPORT_PATH = "./testResult/output.xml"
    }
    stages {
        stage('Setup environment and devices'){
            steps {
                script{
                    common = load "$WORKSPACE/common.groovy"
                    common.stop_appium()
                    common.start_appium()

                    common.kill_all_android_emu()
                    common.start_all_android_emu()
                }
            }
        }
        stage('Assign BPY 02') {
            steps {
                script{
                    echo "Test Android"
                    sh(script: 'pabot --pabotlib --resourcefile ./android_resource_file.dat --processes 2 -d testResult -v PLATFORM_NAME:android robot-mobile/test-cases/.', returnStatus: true)
                    robot outputPath: './testResult', otherFiles: '*.png,*.jpg', logFileName: 'log.html', outputFileName: 'output.xml', reportFileName: 'report.html'
                    //robot outputPath: './'
                    //archiveArtifacts artifacts: 'testResult/*.html, testResult/*.jpg, testResult/*.png, testResult/*.xml', fingerprint: true, onlyIfSuccessful: false

                    common = load "$WORKSPACE/common.groovy"
                    common.result_jenkins_slack("#cicd_training_space", "[Android]")
                    common.result_jenkins_line()
                    common.report_sender()
                }
            }
        post{
            always{
                    cleanWs()
                    echo "Clear"
                }
            }
            
            }
        }
    }